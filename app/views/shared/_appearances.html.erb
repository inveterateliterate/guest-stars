<h4>Appearances</h4>

<ul class="nav nav-pills">
  <li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="true">
    Series<span class="caret"></span>
    </a>
      <ul class="dropdown-menu">
        <li><%= link_to "All", guest_star_path(@guest_star.name) %></li>
        <li role="presentation" class="divider"></li>
        <% @series.each do |series| %>
        <li><%= link_to series.series_title, appearances_by_series_path(name: @guest_star.name, series_title: series.series_title) %></li>
        <%end%>
      </ul>
  </li>
</ul>

<table class="table">
  <thead>
    <tr>
      <th class="std-col">Series</th>
      <th class="sml-col">Season</th>
      <th col-span="">Episode</th>
      <th></th>
      <th class="std-col">Character</th>
      <th class="long-col">Summary</th>
    </tr>
  </thead>

  <tbody>
    <% @appearances.each do |appearance| %>
      <tr>
        <td class="std-col"><%= appearance.series.series_title %></td>
        <td class="sml-col"><%= appearance.episode.season_number%></td>
        <td class="sml-col"><%= appearance.episode.episode_number%></td>
        <td class="std-col"><%= appearance.episode.episode_title %></td>
        <td class="std-col"><%= appearance.character %></td>
        <td class="long-col"><%= raw appearance.episode.episode_summary.truncate(200) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
